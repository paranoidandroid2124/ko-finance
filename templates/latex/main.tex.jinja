% ---------- LAYOUT & TYPO ----------
\usepackage[a4paper,margin=18mm]{geometry}
\usepackage{microtype}
\microtypesetup{protrusion=false}
\usepackage{parskip}
\setlength{\parskip}{6pt}
\usepackage{multicol}
\usepackage{tabularx}
\usepackage{paracol}
\usepackage{xparse}
\usepackage{xstring}

% ---------- COLORS ----------
\usepackage{xcolor}
\definecolor{BGLight}{HTML}{F6F8FB}
\definecolor{Card}{HTML}{FFFFFF}
\definecolor{Text}{HTML}{101217}
\definecolor{Muted}{HTML}{5A6072}
\definecolor{Stroke}{HTML}{DDE1EF}
\definecolor{Accent}{HTML}{5660FF}
\definecolor{AccentB}{HTML}{2BC4C3}
\definecolor{AccentC}{HTML}{9966FF}
\definecolor{AccentWarn}{HTML}{FF7A6B}
\definecolor{AccentInfo}{HTML}{3E8CFF}

\pagecolor{BGLight}
\color{Text}

% ---------- COMPONENT STYLES ----------
\usepackage[most]{tcolorbox}
\tcbset{
  enhanced,
  colback=Card,
  colframe=Stroke,
  boxrule=0.9pt,
  arc=7pt,
  left=6mm,
  right=6mm,
  top=4mm,
  bottom=4mm,
  boxsep=0mm
}

\newtcbox{\chip}{on line,
  colback=Accent!10,
  colframe=Accent!10,
  arc=2.5mm,
  boxrule=0pt,
  left=3mm,
  right=3mm,
  top=0.3mm,
  bottom=0.3mm,
  enlarge top by=0.1mm,
  enlarge bottom by=0.1mm,
  fontupper=\footnotesize\bfseries
}

\NewDocumentCommand{\TrendValue}{ m }{%
  \begingroup
  \IfBeginWith{#1}{+}{\textcolor{AccentB}{#1}}{%
    \IfBeginWith{#1}{-}{\textcolor{AccentWarn}{#1}}{\textcolor{Muted}{#1}}%
  }%
  \endgroup
}

\NewDocumentCommand{\SignalCard}{ O{Accent} m m m m }{%
  \begin{tcolorbox}[colframe=#1, coltitle=Text, fonttitle=\bfseries\small, top=5mm, bottom=5mm]
    {\color{Muted}\small #2}\par
    {\bfseries\Large #3}\par\vspace{0.5mm}
    {\small\TrendValue{#4}}\par\vspace{1mm}
    {\color{Muted}\footnotesize #5}
  \end{tcolorbox}
}

\NewDocumentCommand{\AlertBox}{ O{AccentWarn} m m }{%
  \begin{tcolorbox}[colframe=#1, top=5mm, bottom=5mm]
    {\bfseries #2}\par\vspace{1mm}
    {\color{Muted}\small #3}
  \end{tcolorbox}
}

\NewDocumentCommand{\ActionBox}{ O{AccentInfo} m m }{%
  \begin{tcolorbox}[colframe=#1, top=5mm, bottom=5mm]
    {\bfseries #2}\par\vspace{1mm}
    {\small #3}
  \end{tcolorbox}
}

\NewDocumentCommand{\EvidenceCard}{ m m m }{%
  \begin{tcolorbox}[colframe=Stroke, top=5mm, bottom=5mm]
    {\color{Muted}\small #1}\par\vspace{1mm}
    {\bfseries #2}\par\vspace{1mm}
    {\small #3}
  \end{tcolorbox}
}

\NewDocumentCommand{\MetricRow}{ m m m }{%
  #1 & #2 & #3\\\hline
}
{% endraw %}

% ---------- REPORT TOKENS ----------
\newcommand{\ReportTitle}{ {{ report.title }} }
\newcommand{\ReportDate}{ {{ report.date }} }
\newcommand{\ReportHeadline}{ {{ report.headline }} }

% ---------- HEADER / FOOTER ----------
{% raw %}
\usepackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
\fancyhead[L]{\ReportTitle}
\fancyhead[R]{\ReportDate}
\fancyfoot[C]{\thepage}
\setlength{\headheight}{14pt}

\newcommand{\ReportHeader}{%
  \begin{tcolorbox}[colframe=Accent, left=8mm, right=8mm, top=5mm, bottom=6mm, arc=9pt]
    {\Large\bfseries \ReportTitle}\hfill{\bfseries \ReportDate}\par
    \vspace{2mm}
    {\color{Muted}\small \ReportHeadline}
  \end{tcolorbox}
}
{% endraw %}

% ---------- DOCUMENT ----------
\begin{document}

\ReportHeader

\section*{시그널 요약}
\begin{multicols}{3}
{% for card in signals_main %}
\SignalCard[{{ card.frame_color }}]{ {{ card.label }} }{ {{ card.value }} }{ {{ card.delta }} }{ {{ card.note }} }
{% endfor %}
\end{multicols}

\section*{알림과 액션}
\begin{paracol}{2}
{% for alert in alerts_main %}
\AlertBox[{{ alert.frame_color }}]{ {{ alert.title }} }{ {{ alert.body }} }
{% endfor %}

\switchcolumn
{% for action in actions_main %}
\ActionBox[{{ action.frame_color }}]{ {{ action.title }} }{
{% if action.ordered %}
  \begin{enumerate}
{% for item in action.entries %}
    \item {{ item }}
{% endfor %}
  \end{enumerate}
{% else %}
  \begin{itemize}
{% for item in action.entries %}
    \item {{ item }}
{% endfor %}
  \end{itemize}
{% endif %}
}
{% endfor %}
\end{paracol}

\section*{주요 근거}
\begin{multicols}{2}
{% for item in evidence_main %}
\EvidenceCard{ {{ item.badge }} }{ {{ item.title }} }{ {{ item.body }} }
{% endfor %}
\end{multicols}

\section*{운영 지표}
\begin{tcolorbox}[colframe=Stroke, left=4mm, right=4mm]
\begin{tabularx}{\linewidth}{@{}l r r@{}}
\textbf{Metric} & \textbf{Current} & \textbf{$\Delta$ vs D-1} \\\hline
{% for metric in metrics_main %}
\MetricRow{ {{ metric.label }} }{ {{ metric.current }} }{ {{ metric.delta }} }
{% endfor %}
\end{tabularx}
\end{tcolorbox}

\section*{운영 메모}
\begin{itemize}
{% for note in notes_main %}
  \item {{ note }}
{% endfor %}
\end{itemize}

{% if charts.get('sla_trend') %}
\section*{SLA 추이}
\begin{center}
\IfFileExists{ {{ charts.get('sla_trend') }} }{
  \includegraphics[width=0.9\linewidth]{ {{ charts.get('sla_trend') }} }
}{
}
\end{center}
{% endif %}

{% if appendix.sections %}
\newpage
\section*{부록}
{% for section in appendix.sections %}
\subsection*{ {{ section.title }} }
{% if section.type == "table" %}
\begin{tabularx}{\linewidth}{@{}l X@{}}
{% for row in section.table_rows %}
{{ row.label }} & {{ row.value }}\\\hline
{% endfor %}
\end{tabularx}
{% elif section.type == "list" %}
\begin{itemize}
{% for item in section.list_items %}
  \item {{ item }}
{% endfor %}
\end{itemize}
{% elif section.type == "cards" %}
\begin{multicols}{2}
{% for item in section.card_items %}
\EvidenceCard{ {{ item.badge }} }{ {{ item.title }} }{ {{ item.body }} }
{% endfor %}
\end{multicols}
{% endif %}
{% endfor %}
{% endif %}

\end{document}
